<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".InformationActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="কৃষি তথ্য"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Seasonal Crops List -->
            <TextView
                android:id="@+id/seasonalCropsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="মৌসুম অনুযায়ী ফসল"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/seasonalCropsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ফসলের নাম ১\nফসলের নাম ২\nফসলের নাম ৩"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Crop Timeline -->
            <TextView
                android:id="@+id/cropTimelineTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ফসলের সময়সীমা"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/cropTimelineDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="রোপণের সময়: জানুয়ারী - ফেব্রুয়ারী\nকাটা সময়: মে - জুন"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Disease Prevention Tips -->
            <TextView
                android:id="@+id/diseasePreventionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="রোগ প্রতিরোধ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/diseasePreventionTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="১. সঠিক সেচ ব্যবস্থাপনা\n২. ফসলের পরিচর্যা নিয়মিত করা"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Helpline Numbers -->
            <TextView
                android:id="@+id/helplineTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="হেল্পলাইন নাম্বার"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/districtSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/helplineNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="হেল্পলাইন নাম্বার এখানে দেখাবে"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
