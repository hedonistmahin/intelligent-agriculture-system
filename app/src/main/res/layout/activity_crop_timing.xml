<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CropTimingActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/timingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ফসলের সময়সীমা"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Crop timing details -->
    <TextView
        android:id="@+id/cropTimingText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="এখানে ফসলের রোপণ ও কাটার সময়সীমা দেয়া হবে।"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/timingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
