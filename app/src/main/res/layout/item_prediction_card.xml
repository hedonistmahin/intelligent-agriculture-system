<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="8dp"
    android:cardElevation="4dp"
    android:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/corn" />

        <TextView
            android:id="@+id/tvCropName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corn Yield"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvCropPrediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predicted yield: 200 bu/acre\nRisk level: Moderate"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
