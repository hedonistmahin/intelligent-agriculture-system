<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image with Edit Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_placeholder"
                android:background="@drawable/circle_background"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@id/profile_image"
                android:layout_alignEnd="@id/profile_image"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/circle_background_small"
                android:padding="6dp"
                android:src="@drawable/ic_edit"/>
        </RelativeLayout>

        <!-- Name and Email -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shimanto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/profile_email_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="youremail@domain.com | 01920565925"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>

        <!-- Action Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Edit profile -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/edit_profile"
                android:tag="Edit profile information"/>

            <!-- Notifications -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/notifications"
                android:tag="Notifications"/>

            <!-- Language -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/language"
                android:tag="Language"/>

            <!-- Security -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/security"
                android:tag="Security"/>

            <!-- Theme -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/theme"
                android:tag="Theme"/>

            <!-- Help & Support -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/help_support"
                android:tag="Help &amp; Support"/>

            <!-- Contact Us -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/contact_us"
                android:tag="Contact us"/>

            <!-- Privacy Policy -->
            <include layout="@layout/item_profile_option"
                android:id="@+id/privacy_policy"
                android:tag="Privacy policy"/>
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:backgroundTint="#6A5E34"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:padding="12dp"
            android:textAllCaps="true"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>
