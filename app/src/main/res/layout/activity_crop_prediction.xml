<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".PredictionActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvPredictionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ফসলের দাম পূর্বাভাস"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Subheading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ইনপুট দিন (ফসলের দাম পূর্বাভাস)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/primaryText"
        android:layout_marginBottom="8dp" />

    <!-- Input container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etSoilType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="মাটির ধরন (যেমন, দোঁআশ)"
            android:background="@drawable/input_field_bg"
            android:paddingStart="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etWeather"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="আবহাওয়া (যেমন, রৌদ্রজ্জ্বল)"
            android:background="@drawable/input_field_bg"
            android:paddingStart="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etIrrigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="সেচ ব্যবস্থা (যেমন, ড্রিপ)"
            android:background="@drawable/input_field_bg"
            android:paddingStart="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/etPlantingDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="রোপণের তারিখ (DD/MM)"
            android:background="@drawable/input_field_bg"
            android:paddingStart="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="date" />

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnGeneratePrediction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="পূর্বাভাস দেখান"
            android:textColor="@android:color/white"
            android:background="@color/olive"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_icon_color"
        app:itemTextColor="@color/nav_icon_color"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
