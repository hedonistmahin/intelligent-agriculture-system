<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signInLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- অ্যাপ নাম -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সোনালী ফসল"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4B4A1F"
            android:layout_marginTop="12dp" />

        <!-- সাবটাইটেল -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আপনার অ্যাকাউন্টে সাইন ইন করুন"
            android:textColor="#00695C"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- ইমেইল ফিল্ড -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="আপনার ইমেইল ঠিকানা লিখুন"
            android:background="@drawable/input_field_bg"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:layout_marginBottom="16dp" />

        <!-- পাসওয়ার্ড ফিল্ড -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="আপনার পাসওয়ার্ড লিখুন"
                android:background="@drawable/input_field_bg"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="48dp" />

            <ImageView
                android:id="@+id/eyeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/baseline_visibility_off_24" />
        </RelativeLayout>

        <!-- পাসওয়ার্ড ভুলে গেছেন -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পাসওয়ার্ড ভুলে গেছেন?"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp" />

        <!-- চেকবক্স -->
        <CheckBox
            android:id="@+id/checkboxAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আমি নিয়মাবলিতে সম্মতি দিয়েছি"
            android:layout_marginBottom="16dp" />

        <!-- প্রাইভেসি পলিসি -->
        <TextView
            android:id="@+id/userPolicyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ব্যবহারকারীর চুক্তি এবং গোপনীয়তা নীতি"
            android:textColor="#00695C"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- সাইন ইন বাটন -->
        <Button
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="সাইন ইন করুন"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_signin"
            android:layout_marginBottom="24dp" />

        <!-- একাউন্ট তৈরি লিংক -->
        <TextView
            android:id="@+id/createAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আপনার একাউন্ট নেই? একাউন্ট তৈরি করুন"
            android:textColor="#00695C"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />
    </LinearLayout>

</LinearLayout>
